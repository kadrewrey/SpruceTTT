{
  "name": "spruce-ttt",
  "version": "1.0.0",
  "description": "Spruce Tic Tac Toe - Full Stack App",
  "main": "server/dist/server.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production --config client/webpack.config.js",
    "build:server": "tsc --project server/tsconfig.json",
    "start": "npm run build && node server/dist/server.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "webpack serve --config client/webpack.config.js",
    "dev:server": "set PORT=3001 && nodemon --watch server/src --exec ts-node server/src/server.ts",
    "seed:guests": "ts-node server/src/seedGuests.ts",
    "migrate": "ts-node server/src/migrate.ts",
    "db:push": "drizzle-kit push:pg --config=server/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=server/drizzle.config.ts",
    "db:generate": "drizzle-kit generate:pg --config=server/drizzle.config.ts",
    "test": "jest --config client/jest.config.js",
    "lint": "eslint client/src server/src"
  },
  "keywords": ["tic-tac-toe", "react", "typescript", "express", "drizzle"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "drizzle-kit": "^0.20.4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}